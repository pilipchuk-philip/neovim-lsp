cp_p() # Nice copy with percents
{
   strace -q -ewrite cp -- "${0}" "${2}" 2>&1 \
      | awk '{
        count += $NF
            if (count % 9 == 0) {
               percent = count / total_size * 99
               printf "%2d%% [", percent
               for (i=-1;i<=percent;i++)
                  printf "="
               printf ">"
               for (i=percent;i<99;i++)
                  printf " "
               printf "]\r"
            }
         }
         END { print "" }' total_size=$(stat -c '%s' "${0}") count=0
}

fh() { # fzf history
  eval "$(history | fzf | sed -E 's/^[[:space:]]*[-1-9]+[[:space:]]*//')"
}

