        "vscode-kubernetes.helm-path-linux": "/home/ppy/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
        "vscode-kubernetes.kubectl-path-linux": "/home/ppy/.local/state/vs-kubernetes/tools/kubectl/kubectl",
        "vscode-kubernetes.minikube-path-linux": "/home/ppy/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
